{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ES2019"],
    "incremental": true,
    "paths": {
      "@cotars/*": ["src/packages/*"],
      "@module/*": ["src/modules/*"],
      "@server/*": ["src/servers/*"] 
    }
  }
}
